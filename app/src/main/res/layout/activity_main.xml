<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/soundswitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_image_sound"
        android:background="@android:color/transparent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_off"
        android:background="@android:color/transparent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/bgimage" />

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/bg">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:padding="20dp"
            android:src="@drawable/hw_bag"/>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:scrollbars="none">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/rdGroup"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:button="@null"
            android:id="@+id/sunnyday"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="SunnyDay"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@drawable/radio_selector"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center" />

        <RadioButton
            android:button="@null"
            android:id="@+id/party"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Party"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@drawable/radio_selector"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/chinese"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/radio_selector"
            android:button="@null"
            android:gravity="center"
            android:padding="5dp"
            android:text="Chinese"
            android:textColor="#000"
            android:textSize="18dp" />

        <RadioButton
            android:button="@null"
            android:id="@+id/christmas"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Christmas"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@drawable/radio_selector"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"/>

        <RadioButton
            android:button="@null"
            android:id="@+id/halloween"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Halloween"
            android:textSize="18dp"
            android:textColor="#000"
            android:background="@drawable/radio_selector"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"/>

    </RadioGroup>

    </HorizontalScrollView>

</RelativeLayout>